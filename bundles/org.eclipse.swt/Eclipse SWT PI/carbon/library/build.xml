<?xml version="1.0" encoding="UTF-8"?>

<project default="build_carbon_lib" basedir="../../..">

<target name="build_carbon_lib">
	<exec dir="./bin/library" executable="sh">
		<arg line="${basedir}/bin/library/build.sh"/>
		<arg line="install"/>
	</exec>
	<eclipse.refreshLocal resource="org.eclipse.swt.carbon" depth="infinite" />		
</target>

<target name="clean">
	<tstamp/>
	<exec dir="./bin/library" executable="sh">
		<arg line="${basedir}/bin/library/build.sh"/>
		<arg line="clean"/>
	</exec>
</target>

</project>